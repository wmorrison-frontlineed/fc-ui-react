.react-super-single-filter-list {

	> div {
		margin: .33em 0 .66em
	}

	.super-button-container {
		display: block
	}

	.menu-container {
		background-color: #fff
		position: absolute
		z-index: 1000
		border-bottom: 1px solid $salt600

		.select-menu-filter {
			display: flex
			width: 100%
			align-items: center
			border: 1px solid $salt600
			padding: 2px 5px
		}

		.select-menu-filter input {
			border: none
			box-shadow: none
			-moz-box-shadow: none
			-webkit-box-shadow: none
		}

		.select-menu-list {
			border: 0
			position: relative
			border-left: 1px solid $salt600
			border-right: 1px solid $salt600
			max-height: 200px
			min-width: 400px
			max-width: 500px
			overflow-y: auto
			option {
				margin: 0
				width: 100%
				padding: 6px 0 6px 10px
				white-space: nowrap
				overflow: hidden
				text-overflow: ellipsis
			}

			option:hover {
				background-color: $salt300
			}

			option::before {
				font-family: 'Fl-Icons'
				border-radius: 100%
				margin-right: 6px
				vertical-align: middle
				display: inline-block
				-webkit-box-shadow: inset 1px 1px 3px $salt600
				border: 1px solid $salt600
				width: 2.1rem
				height: 2.1rem
				box-sizing: border-box
				margin-top: -0.2rem
				content: '\a0'
			}

			option:checked::before {
				background-color: $salt300
				color: $pepper300
				padding-top: 0.2rem
				font-size: 13px
				line-height: 1.5rem
				text-align: center
				white-space: nowrap
				-moz-box-shadow: none
				-webkit-box-shadow: none
				content: '\e614'
			}
		}
	}
}
